@model Phishing_Platform_Midterm.Entities.Sentemail
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Mail Gönderme İşlemi</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-4">
    <form method="post" asp-action="SendMail" asp-controller="PhishingEmail">
        <div class="form-group">
            <label for="to">To:</label>
            <input type="text" class="form-control" id="to" name="to" required/>
        </div>

        <div class="form-group">
            <label for="selectLink" class="form-label">Select the Link</label>
            <select class="form-control" id="selectLink" name="selectLink">
                <option value="Netflix" data-url="Netflix/Nlogin/">Netflix</option>
                <option value="Udemy" data-url="Udemy/Ulogin/">Udemy</option>
                <option value="Instagram" data-url="Instagram/Ilogin/">Instagram</option>
            </select>

        </div>

        <div class="form-group">
            <label for="message">Message:</label>
            <textarea class="form-control" id="message" name="message" required></textarea>
        </div>
        
        
        <button type="submit" class="btn btn-primary">Mail Gönder</button>
    </form>
</div>

<!-- Include Bootstrap JS and Popper.js -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>